{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6", "dom"],
    "baseUrl": "src",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["*.ts", "./**/*.ts", "./**/*.json"],
  "exclude": ["node_modules"]
}
